<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="vertical"
    tools:context=".MainActivity"
    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        app:cardUseCompatPadding="true">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarz"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/ic_launcher_background"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="DashBoard" />



        <!---Card 1-->
        <androidx.cardview.widget.CardView
            android:id="@+id/Engine"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            tools:ignore="ExtraText">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/engine" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="215dp"
                android:text="Engine Maintenance"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </androidx.cardview.widget.CardView>

        <!---Card two-->
        <androidx.cardview.widget.CardView
            android:id="@+id/Tyre"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            tools:ignore="ExtraText">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/tyre" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tyre Maintenance"
                android:textColor="@color/black"
                android:textSize="25dp" />
        </androidx.cardview.widget.CardView>

        <!--Card Three-->

        <androidx.cardview.widget.CardView
            android:id="@+id/wash"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            tools:ignore="ExtraText">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/carwash" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Carwash"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </androidx.cardview.widget.CardView>

        <!--Card Four-->

        <androidx.cardview.widget.CardView
            android:id="@+id/lease"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            tools:ignore="ExtraText">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/lease" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Lease"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </androidx.cardview.widget.CardView>

        <!--Card Five-->

        <androidx.cardview.widget.CardView
            android:id="@+id/body"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            tools:ignore="ExtraText">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Body"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </androidx.cardview.widget.CardView>

        <!--Card Six-->

        <androidx.cardview.widget.CardView
            android:id="@+id/accessories"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            tools:ignore="ExtraText">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/accessories" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Accessories"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </androidx.cardview.widget.CardView>

        <!--Card Seven-->

        <androidx.cardview.widget.CardView
            android:id="@+id/logout"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            tools:ignore="ExtraText">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logout" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Logout"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>
