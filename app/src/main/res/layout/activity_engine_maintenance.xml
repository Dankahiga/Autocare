<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="vertical"
    android:background="@color/white"
    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        app:cardUseCompatPadding="true"
        tools:context=".MainActivity">




        <!---Card 1-->
        <androidx.cardview.widget.CardView
            android:id="@+id/oil"
            android:layout_width="209dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:background="@color/white"
            app:cardCornerRadius="8dp"
            android:layout_column="0"
            android:layout_row="0"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            tools:ignore="ExtraText">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/oil" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="215dp"
                android:text="Oil Change"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </androidx.cardview.widget.CardView>

        <!---Card two-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cool"
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            android:layout_column="1"
            android:layout_row="0"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            tools:ignore="ExtraText">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/cooling" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cooling System"
                android:textColor="@color/black"
                android:textSize="25dp" />
        </androidx.cardview.widget.CardView>

        <!--Card Three-->

        <androidx.cardview.widget.CardView
            android:id="@+id/filter"
            android:layout_width="209dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_row="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            tools:ignore="ExtraText">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/fuel" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Fuel Filter"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </androidx.cardview.widget.CardView>

        <!--Card Four-->

        <androidx.cardview.widget.CardView
            android:id="@+id/plugs"
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            tools:ignore="ExtraText">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/plug" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="plugs n Wires"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </androidx.cardview.widget.CardView>

        <!--Card Four-->

        <androidx.cardview.widget.CardView

            android:id="@+id/diagnosis"
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_row="5"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            tools:ignore="ExtraText">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/diagnosis" />

            <TextView
                android:layout_width="169dp"
                android:layout_height="match_parent"
                android:text="Car Diagnosis"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </androidx.cardview.widget.CardView>





    </GridLayout>
</ScrollView>